<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1020.0" prefWidth="1920.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StudentRegistrationController">
   <children>
      <AnchorPane prefHeight="1020.0" prefWidth="200.0" styleClass="left-side" stylesheets="@../styles/style.css">
         <children>
            <VBox fx:id="leftSidePanel" alignment="CENTER" prefHeight="1020.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <ToggleButton contentDisplay="TOP" mnemonicParsing="false" prefHeight="150.0" prefWidth="200.0" selected="true" stylesheets="@../styles/style.css" text="Register Student" textAlignment="CENTER">
                     <graphic>
                        <FontAwesomeIconView glyphName="GRADUATION_CAP" mouseTransparent="true" size="50" strokeWidth="0.0" />
                     </graphic>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="side_grp" />
                     </toggleGroup></ToggleButton>
                  <ToggleButton contentDisplay="TOP" mnemonicParsing="false" prefHeight="150.0" prefWidth="200.0" text="Add New Training Programs" textAlignment="CENTER" toggleGroup="$side_grp" wrapText="true">
                     <graphic>
                        <FontAwesomeIconView glyphName="BOOK" mouseTransparent="true" size="50" strokeWidth="0.0" />
                     </graphic></ToggleButton>
                  <ToggleButton contentDisplay="TOP" mnemonicParsing="false" prefHeight="150.0" prefWidth="200.0" text="Student Details" textAlignment="CENTER" toggleGroup="$side_grp">
                     <graphic>
                        <FontAwesomeIconView glyphName="USERS" mouseTransparent="true" size="50" strokeWidth="0.0" />
                     </graphic></ToggleButton>
                  <ToggleButton contentDisplay="TOP" mnemonicParsing="false" prefHeight="150.0" prefWidth="200.0" text="Sign Out" textAlignment="CENTER" toggleGroup="$side_grp">
                     <graphic>
                        <FontAwesomeIconView glyphName="SIGN_OUT" mouseTransparent="true" size="50" strokeWidth="0.0" />
                     </graphic></ToggleButton>
               </children>
            </VBox>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="rightMainAnchor" layoutX="200.0" prefHeight="1020.0" prefWidth="1800.0" styleClass="right-main" />
   </children>
</AnchorPane>
